{
  "compilerOptions": {
    "incremental": true,
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*",
    //"test/**/*"
  ]
}